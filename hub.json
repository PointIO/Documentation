        {
            "path": "/hubs/{hubId}/folders/list.{format}",
            "operations": [
                {
                    "summary": "Get the list of folders and files of a specific fipath from a specific hub.",
                    "httpMethod": "GET",
                    "nickname": "Hubs_Folders_List",
                    "notes": "Displays the list of folders and files in the chosen hub at the specified path and gives you details about those folders and files. You can use folders details to browse them as well.",
                    "responseClass": "Result",
                    "parameters": [
                        {
                            "name": "Authorization",
                            "description": "SESSIONKEY value provided by the /auth.json method.",
                            "dataType": "String",
                            "paramType": "header",
                            "required": true
                        },
                        {
                            "name": "hubId",
                            "description": "Id of the hub. Use a HUBID provided by the /hubs/list.json method.",
                            "dataType": "String",
                            "paramType": "path",
                            "required": true
                        },
                        {
                            "name": "folderid",
                            "description": "Id of the access rule you want to browse. Use a SHAREID from /accessrules/list.json to identify the access rule.",
                            "dataType": "String",
                            "paramType": "query",
                            "required": true
                        },
                        {
                            "name": "containerid",
                            "description": "Id of the folder you want to browse. If not filled, the default selected folder will be the root directory of the hub.",
                            "dataType": "String",
                            "paramType": "query",
                            "required": false
                        },
                        {
                            "name": "path",
                            "description": "Requested folder path for file listing. Use / for root directory (default).",
                            "dataType": "String",
                            "paramType": "query",
                            "required": true
                        }
                    ]
                }
            ]
        },
