{
    "basePath": "https://api.point.io/v2",
    "apiVersion": "2.0",
    "swaggerVersion":"1.1",
    "resourcePath": "/",
    "apis": [
        {
            "path":"/auth.{format}",
            "operations": [
                {
                    "summary":"Authenticate to Point.io API",
                    "httpMethod":"POST",
                    "nickname":"Auth",
                    "notes":"Connects to your Point.io account and gives you your SESSIONKEY value to perform other API calls. Also displays informations about your account.",
                    "responseClass": "Result",
                    "parameters": [
                        {
                            "name":"email",
                            "description":"Your Point.io account email address.",
                            "dataType":"String",
                            "paramType":"query",
                            "required":true
                        },
                        {
                            "name":"password",
                            "description":"Your Point.io account password.",
                            "dataType":"String",
                            "paramType":"query",
                            "required":true
                        },
                        {
                            "name":"apikey",
                            "description":"App ID of your Point.io application. See point.io/account for info.",
                            "dataType":"String",
                            "paramType":"query",
                            "required":true
                        }
                    ]
                }
            ]
        },
        {
            "path": "/hubs/create.{format}",
            "operations": [
                {
                    "summary": "Create (deploy) a new hub",
                    "httpMethod": "POST",
                    "nickname": "Hubs_Create",
                    "notes": "Creates (deploys) a new hub. When you deploy a new hub, there will be no shared files or invited users by default. You will then need to share files and add your users. ",
                    "parameters": [
                        {
                            "name": "Authorization",
                            "description": "SESSIONKEY value provided by the /auth.json method.",
                            "dataType": "String",
							"paramType": "header",
                            "required": true
                        },
						{
                            "name": "roomName",
                            "description": "Friendly name for your hub",
                            "dataType": "String",
							"paramType": "query",
                            "required": true
                        },
                        {
                            "name": "enabled",
                            "description": "Whether the hub is enabled for use",
                            "dataType": "numeric",
                            "paramType": "query",
                            "required": false
                        },
                        {
                            "name": "description",
                            "description": "Description of the hub",
                            "dataType": "String",
							"paramType": "query",
                            "required": true
                        },
						{
                            "name": "roomIcon",
                            "description": "URL to a 29x29 pixel jpg or png image to use as the hub icon. Default is no image.",
                            "dataType": "String",
							"paramType": "query",
                            "required": false
                        },
						{
                            "name": "mappedUrl",
                            "description": "Custom URL (which hosts custom embed code) where this Hub can be accessed. Default is no URL.",
                            "dataType": "String",
							"paramType": "query",
                            "required": false
                        },
						{
                            "name": "maxusers",
                            "description": "The enforced limit of members for this hub. Default is unlimited",
                            "dataType": "String",
							"paramType": "query",
                            "required": false
                        },
                        {
                            "name": "hideusers",
                            "description": "??? User names hidden ???. Default is 0",
                            "dataType": "String",
                            "paramType": "query",
                            "required": false
                        },
						{
                            "name": "expirationdate",
                            "description": "Expiration date for the hub. Default is no expiration date",
                            "dataType": "String",
							"paramType": "query",
                            "required": false
                        },
                        {
                            "name": "visibleTabs",
                            "description": "???. Default is HOME,SHARING,FILES,ACTIVITY",
                            "dataType": "String",
                            "paramType": "query",
                            "required": false
                        }
                    ]
                }
            ]
        },
        {
            "path": "/hubs/list.{format}",
            "operations": [
                {
                    "summary": "Get a list of the hubs connected to your account",
                    "httpMethod": "GET",
                    "nickname": "Hubs_List",
                    "notes": "Gets you the list of your account's hubs.",
                    "responseClass": "Result",
                    "parameters": [
                        {
                            "name": "Authorization",
                            "description": "SESSIONKEY value provided by the /auth.json method.",
                            "dataType": "String",
                            "paramType": "header",
                            "required": true
                        }
                    ]
                }
            ]
        },
